@model IEnumerable<bai3_TH.Models.Category>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<header class="bg-info text-white  py-4">
    <h1 class="text-center text-danger">hiện thị Category</h1>
<h2><font color="red">Category</font> </h2>
<a asp-action="Add">Add</a>
<!--
    <style>
    body {
        background-color: pink
    }</style>
-->

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
             <th>Id</th>
             <th>Actions</th>



            </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <th>@category.Id</th>

                <td>
                    <a asp-action="Display" asp-route-id="@category.Id" style="color: red;">View</a> |
                    <a asp-action="Update" asp-route-id="@category.Id" style="color:darkblue;">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@category.Id" style="color:green;">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>