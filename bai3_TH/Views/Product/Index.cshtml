@model IEnumerable<bai3_TH.Models.Product>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<header class="bg-success text-white  py-4">
    <h1 class="text-center">Trang Web Bán Hàng</h1>
<h2><font color="red">Product</font> </h2>
<a asp-action="Add">Add</a>

    <style>
    body {
        background-color: pink
    }</style>


<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Image</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
   
    <tbody>
       
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Description</td>
                <td>
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src ="@product.ImageUrl" alr="Product Image" style="max-width: 200px;"/>
                        }
                    </td>
                <td>@(product.Category?.Name ?? "No Category")</td>
               
                

               

                <td>
                    <a asp-action="Display" asp-route-id="@product.Id" style="color: red;">View</a> |
                    <a asp-action="Update" asp-route-id="@product.Id" style="color:darkblue;">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@product.Id" style="color:green;">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
